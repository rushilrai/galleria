<li class="carousel-item">
  <div
    class="showcase-item-card card-border card h-72 w-64 border-primary/40 bg-base-200 hover:text-primary-content"
  >
    <div class="card-body">
      <h2 class="card-title text-2xl">goESG</h2>
      <p class="text-lg">
        A card component has a figure, a body part, and inside body there are
        title and actions parts.
      </p>
      <div class="card-actions justify-end">
        <button class="btn btn-outline btn-sm">View Details</button>
      </div>
    </div>
  </div>
</li>

<script>
  import { hover, animate } from "motion";

  import { getCSSVariable } from "../../common/utils";

  const showcaseItem = document.querySelectorAll(
    ".showcase-item-card",
  ) as NodeListOf<HTMLDivElement>;

  if (showcaseItem) {
    hover(showcaseItem, (element) => {
      animate(element, {
        width: "280px",
        height: "300px",
        backgroundColor: getCSSVariable("--color-primary"),
      });

      return () => {
        animate(element, {
          width: "256px",
          height: "288px",
          backgroundColor: getCSSVariable("--color-base-200"),
        });
      };
    });
  }
</script>
