    <Image
      src={WavyUnderline}
      alt="underline for the heading"
      width={180}
      height={20}
      densities={[1, 2]}
    />
  </div>

  <ul
    id="showcase-list"
    class="carousel carousel-center space-x-4 px-4 lg:px-6"
  >
    {
      SHOWCASE_ITEMS.map((item, index) => (
        <ShowcaseItem
          key={index}
          title={item.title}
          description={item.description}
          uri={item.uri}
        />
      ))
    }
  </ul>
</section>
