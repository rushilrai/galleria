---
import { Image } from "astro:assets";
import { MailIcon } from "@lucide/astro";

import Headshot from "../../../assets/images/landing/headshot.png";
import HeroImage from "../../../assets/images/landing/hero.png";
---

<section
  id="hero"
  class="flex h-full w-full max-w-5xl flex-row justify-between gap-6"
>
  <div id="hero-content" class="flex max-w-md flex-col justify-center gap-4">
    <Image
      id="headshot"
      src={Headshot}
      alt="headshot in black and white"
      width={100}
      height={100}
      densities={[1, 2]}
      class="mask mask-circle pt-2 opacity-0"
    />

    <h2
      id="hero-greeting"
      class="font-heading text-4xl font-normal text-base-content opacity-0"
    >
      Hey! I am <span class="inline-block font-semibold">Rushil Rai</span>
    </h2>

    <p class="mb-2 max-w-xl font-body text-lg font-medium opacity-0">
      Always a developer, sometimes a founder. <br />Love converting ideas into
      awesome working systems. <br /> Driven by curiosity, I don't stop at <span
        class="italic">"good enough".</span
      >
    </p>

    <div class="flex flex-row gap-2 opacity-0">
      <a
        href="mailto:rushil@rushilrai.me"
        class="btn max-w-[200px] btn-md btn-primary"
      >
        <MailIcon size={16} class="text-primary-content" />

        Get in touch
      </a>

      <a
        href="https://github.com/rushilrai"
        target="_blank"
        class="btn btn-square"
      >
        <svg
          role="img"
          viewBox="0 0 98 96"
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4 text-base-content"
        >
          <title>GitHub</title>

          <path
            fill-rule="evenodd"
            clip-rule="evenodd"
            d="M48.854 0C21.839 0 0 22 0 49.217c0 21.756 13.993 40.172 33.405 46.69 2.427.49 3.316-1.059 3.316-2.362 0-1.141-.08-5.052-.08-9.127-13.59 2.934-16.42-5.867-16.42-5.867-2.184-5.704-5.42-7.17-5.42-7.17-4.448-3.015.324-3.015.324-3.015 4.934.326 7.523 5.052 7.523 5.052 4.367 7.496 11.404 5.378 14.235 4.074.404-3.178 1.699-5.378 3.074-6.6-10.839-1.141-22.243-5.378-22.243-24.283 0-5.378 1.94-9.778 5.014-13.2-.485-1.222-2.184-6.275.486-13.038 0 0 4.125-1.304 13.426 5.052a46.97 46.97 0 0 1 12.214-1.63c4.125 0 8.33.571 12.213 1.63 9.302-6.356 13.427-5.052 13.427-5.052 2.67 6.763.97 11.816.485 13.038 3.155 3.422 5.015 7.822 5.015 13.2 0 18.905-11.404 23.06-22.324 24.283 1.78 1.548 3.316 4.481 3.316 9.126 0 6.6-.08 11.897-.08 13.526 0 1.304.89 2.853 3.316 2.364 19.412-6.52 33.405-24.935 33.405-46.691C97.707 22 75.788 0 48.854 0z"
          ></path>
        </svg>
      </a>

      <a
        href="https://www.linkedin.com/in/rushil-rai-07363116a/"
        target="_blank"
        class="btn btn-square"
      >
        <svg
          role="img"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4 fill-current text-base-content"
        >
          <title>LinkedIn</title>

          <path
            d="M20.452 20.452h-3.554v-5.569c0-1.328-.028-3.039-1.849-3.039-1.849 0-2.134 1.445-2.134 2.939v5.669h-3.554V9h3.414v1.561h.049c.476-.9 1.637-1.849 3.368-1.849 3.598 0 4.264 2.368 4.264 5.451v6.289zM5.337 7.433c-1.144 0-2.067-.926-2.067-2.066 0-1.144.923-2.067 2.067-2.067 1.14 0 2.066.923 2.066 2.067 0 1.14-.926 2.066-2.066 2.066zm1.778 13.019H3.558V9h3.557v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.226.792 24 1.771 24h20.451C23.2 24 24 23.226 24 22.271V1.729C24 .774 23.2 0 22.225 0z"
          ></path>
        </svg>
      </a>

      <a href="https://x.com/RaiRushil" target="_blank" class="btn btn-square">
        <svg
          role="img"
          viewBox="0 0 1200 1227"
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4 fill-current text-base-content"
        >
          <title>X (Twitter)</title>

          <path
            d="M714.163 519.284L1160.89 0H1055.03L667.137 450.887L357.328 0H0L468.492 681.821L0 1226.37H105.866L515.491 750.218L842.672 1226.37H1200L714.137 519.284H714.163ZM569.165 687.828L521.697 619.934L144.011 79.6944H306.615L611.412 515.685L658.88 583.579L1055.08 1150.3H892.476L569.165 687.854V687.828Z"
          ></path>
        </svg>
      </a>
    </div>
  </div>

  <Image
    id="hero-image"
    src={HeroImage}
    alt="business handshake"
    width={450}
    height={430}
    densities={[1, 2]}
    class="opacity-0"
  />
</section>

<script>
  import { animate, inView, stagger } from "motion";

  const hero = document.getElementById("hero") as HTMLDivElement;
  const heroContent = document.getElementById("hero-content") as HTMLDivElement;
  const heroImage = document.getElementById("hero-image") as HTMLImageElement;

  if (hero && heroContent && heroImage) {
    const heroContentChildren = Array.from(heroContent.children);

    inView(hero, () => {
      animate(
        heroContentChildren,
        { y: [10, 0], opacity: [0, 1] },
        { delay: stagger(0.2), duration: 1 },
      );

      animate(heroImage, { opacity: [0, 1] }, { duration: 1 });
    });
  }
</script>
