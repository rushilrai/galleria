---
import "@fontsource-variable/merriweather";
import "@fontsource-variable/outfit";

import "../config/index.css";
import Header from "./Header.astro";

console.log("galleria");
---

<html data-theme="rr-theme" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Standard Favicons -->
    <link rel="icon" type="image/x-icon" href="/favicon/favicon.ico" />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />

    <!-- Apple Touch Icons (iOS/Safari) -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />

    <!-- Android/Chrome Icons -->
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="/favicon/android-chrome-192x192.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="512x512"
      href="/favicon/android-chrome-512x512.png"
    />

    <!-- Theme -->
    <meta name="theme-color" content="#f8f7f3" />
    <meta name="color-scheme" content="light" />

    <!-- Primary Meta Tags -->
    <title>RR</title>
    <meta name="title" content="RR" />
    <meta name="description" content="Rushil Rai's personal website" />
    <meta name="keywords" content="rushil, rushil rai, rushilrai, gubboi" />
    <meta name="author" content="Rushil Rai" />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://www.rushilrai.me" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.rushilrai.me" />
    <meta property="og:title" content="RR" />
    <meta property="og:description" content="Rushil Rai's personal website" />
    <meta property="og:image" content="https://www.rushilrai.me/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Rushil Rai" />
    <meta property="og:site_name" content="RR" />
    <meta property="og:locale" content="en_IN" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://www.rushilrai.me" />
    <meta name="twitter:title" content="RR" />
    <meta name="twitter:description" content="Rushil Rai's personal website" />
    <meta
      name="twitter:image"
      content="https://www.rushilrai.me/og-image.png"
    />
    <meta name="twitter:image:alt" content="Rushil Rai" />
    <meta name="twitter:creator" content="@RaiRushil" />
    <meta name="twitter:site" content="@RaiRushil" />

    <!-- Additional Meta Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />

    <noscript>
      <div
        class="fixed inset-0 z-50 flex items-center justify-center bg-base-200"
      >
        Rushil recommends JavaScript :)
      </div>
    </noscript>
  </head>

  <body class="flex min-h-screen w-full flex-col items-center bg-base-200">
    <Header />
    <slot />
  </body>
</html>
